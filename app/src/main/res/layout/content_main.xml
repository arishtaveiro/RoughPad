<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.arisht.roughpad.MainActivity"
    tools:showIn="@layout/activity_main">

    <com.example.arisht.roughpad.PaintView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paintView"
        android:layout_above="@+id/linearLayout"/>


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/seekBar"
        android:thumb="@drawable/custom_seekbar"
        android:progressDrawable="@drawable/progress"
        android:layout_alignParentStart="true" />





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="11">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#000"
            android:layout_weight="1"
            android:onClick="col1"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#f20606"
            android:layout_weight="1"

            android:onClick="col2"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#e48d29"
            android:layout_weight="1"

            android:onClick="col3"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#d9e413"
            android:layout_weight="1"

            android:onClick="col4"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#85de0a"
            android:layout_weight="1"

            android:onClick="col5"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#0cea10"
            android:layout_weight="1"

            android:onClick="col6"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#12e8ec"
            android:layout_weight="1"

            android:onClick="col7"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#0a4aec"
            android:layout_weight="1"

            android:onClick="col8"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#9609e7"
            android:layout_weight="1"

            android:onClick="col9"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#e205b2"
            android:layout_weight="1"

            android:onClick="col10"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#ffffff"
            android:layout_weight="1"

            android:onClick="col11"/>



    </LinearLayout>
</RelativeLayout>
